<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#E0E0E0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_avatar"
            android:layout_width="120dp"
            android:layout_centerHorizontal="true"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/margin_normal"
            app:civ_border_width="2dp"
            app:civ_border_color="#ffffff"/>
        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhut Le"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:layout_below="@+id/image_avatar"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_mail"/>
        <TextView
            android:layout_marginLeft="@dimen/margin_normal"
            android:id="@+id/mail"
            android:text="levietnhutit@gmail.com"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_mail"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_cake"/>
        <TextView
            android:layout_marginLeft="@dimen/margin_normal"
            android:id="@+id/birth"
            android:text="06/10/1994"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_birth"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_person"/>
        <TextView
            android:layout_marginLeft="@dimen/margin_normal"
            android:id="@+id/gender"
            android:text="Male"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_gender"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textColor="@color/colorWhite"
        android:background="@drawable/background_button"
        android:textAllCaps="false"/>
</LinearLayout>